<!-- Header for posts / pages, must be placed in #post helper -->

<header id="post-header" class="post-header">
	<h1 id="logo"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
	<nav id="nav">
		<ul class="wht">
			{{> "menu-top" }}
		</ul>
	</nav>
	<nav id="nav-mobile">
		<a href="#mobile-menu" class="icon fa-bars in-post"><span class="label">Menu</span></a>
	</nav>
		<nav id="mobile-menu" style="visibility:hidden;">
			<ul>
				{{> "menu-top" }}
			</ul>
		</nav>
	</nav>
</header>
</div>

<div class="post-cover-image home-style" style="background-size: cover; {{#if image}}background-image:url('{{image}}'){{else}}background-image:url('/assets/images/empty.png'); background-repeat: repeat{{/if}}">
	<div class="content">
		<header>
			<h2>{{title}}</h2>
		</header>
		<p class="home-post-tags">{{tags separator=" " prefix="Tagged with: "}}</p>
	</div>
</div>
